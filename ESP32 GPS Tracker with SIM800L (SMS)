#include <TinyGPS++.h>
#include <HardwareSerial.h>
TinyGPSPlus gps;
HardwareSerial neogps(1);
HardwareSerial sim800(2);
void setup() {
  Serial.begin(115200);
  neogps.begin(9600, SERIAL_8N1, 16, 17); // GPS pins
  sim800.begin(9600, SERIAL_8N1, 26, 27); // SIM800L pins

  Serial.println("GPS + SIM800L Tracker");
}
void loop() {
  while (neogps.available() > 0) {
    gps.encode(neogps.read());
    if (gps.location.isUpdated()) {
      String lat = String(gps.location.lat(), 6);
      String lon = String(gps.location.lng(), 6);

      Serial.println("Location: " + lat + ", " + lon);
      sendSMS(lat, lon);
      delay(10000);
    }
  }
}




